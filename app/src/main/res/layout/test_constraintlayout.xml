<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dd"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="201dp"
        android:layout_height="221dp"
        android:src="@mipmap/android"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="Get it"
        android:id="@+id/appCompatButton"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:elevation="0dp"
        android:onClick="rotate (AnimationActivity)"
        android:background="@color/orange"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Follow Me"
        android:id="@+id/textView"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/pickerview_timebtn_nor"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />
    <TextView
        android:layout_width="127dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="Hello"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="@+id/iv_head"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_head"
        app:layout_constraintLeft_toLeftOf="@+id/iv_head" />
</android.support.constraint.ConstraintLayout>