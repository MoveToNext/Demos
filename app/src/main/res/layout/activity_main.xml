<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:id="@+id/id_drawer_layout"
    tools:context="liu.myapplication.MainActivity">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/orange">

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/animation_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="属性动画" />

                <Button
                    android:id="@+id/custom_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义view" />

                <Button
                    android:id="@+id/ok_http"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ok_http" />

                <Button
                    android:id="@+id/Observer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="观察者模式" />

                <Button
                    android:id="@+id/getChannel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="获得清单文件中的Meta_data"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/HeaderListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HeaderListView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/RemoteView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RemoteView+Notification"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/popupwindow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="弹出popupwindow"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/PullToRefreshListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PullToRefreshListView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RecyclerView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/RecyclerDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RecyclerDefault"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/fanxing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="泛型"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/ExpandableListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ExpandableListView" />
                <Button
                    android:id="@+id/EventBusActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EventBusActivity" />
                <Button
                    android:id="@+id/life_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="生活小帮助" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/id_nv_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="false"
        app:menu="@menu/menu_drawer"
        />

</android.support.v4.widget.DrawerLayout>
